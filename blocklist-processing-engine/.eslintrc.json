{
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".ts", ".tsx"]
        }
      }
    },
    "env": {
      "node": true
    },
    "rules": {
      "indent": [
        "error",
        2,
        { "SwitchCase": 1 }
      ]
    }
  }